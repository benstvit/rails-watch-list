<h1>Your ***** amazing movie lists ! 🎞</h1>

<%= link_to "Add new list", new_list_path, class: 'btn btn-dark p-3' %>

<div class="row">
  <% @lists.each do |list| %>
    <div class="card-category col-lg-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://picsum.photos/seed/picsum/200/300)">
    <%= link_to "#{list.name}", list_path(list) %>
    </div>
    <% end %>
</div>
